# PaperFlow Configuration
# Copy this file to .env and update with your actual values

# Application Settings
PROJECT_NAME=PaperFlow
VERSION=0.1.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security Settings
# IMPORTANT: Change these in production!
API_KEY=your-api-key-here-change-in-production
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Article Extraction
# By default, uses trafilatura's lightweight HTTP fetching (low resource usage)
# Set to True to use Playwright for JavaScript-rendered pages (higher resource usage)
ENABLE_PLAYWRIGHT=False

# Dropbox API (Optional - PDF files will be generated locally if not configured)
# RECOMMENDED: Use OAuth 2.0 with refresh token for better security
# 1. Create app at: https://www.dropbox.com/developers/apps
# 2. Get your App Key and App Secret from the app settings
# 3. Follow OAuth flow to obtain refresh token (see README for detailed steps)
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
DROPBOX_REFRESH_TOKEN=

# LEGACY: Direct access token (deprecated, will be removed in future versions)
# Only use if you have a long-lived access token from before September 30, 2021
DROPBOX_ACCESS_TOKEN=

DROPBOX_FOLDER_PATH=/PaperFlow

# Redis Settings (for async job processing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# PDF Generation Settings
PDF_PAGE_SIZE=Letter
PDF_MARGIN=1in
PDF_FONT_SIZE=12pt
PDF_LINE_HEIGHT=1.6

# Storage Settings
TEMP_DIR=/tmp/paperflow
MAX_CONTENT_LENGTH=10485760

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database (for future use)
DATABASE_URL=sqlite:///./paperflow.db
